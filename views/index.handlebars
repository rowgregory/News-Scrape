<div class="container">
  {{#each articles}}
    <div class="card">
      <h3 class="card-header">{{this.title}}</h3>
      <div class="row">
        <div class="col-9">
          <p class="card-text">{{this.summary}}</p>
           <a href="{{this.link}}" target="_blank" class="card-link">Read more</a>
        </div>
        <div class="col-3 align-self-end text-right" id="notes">
          {{#if saved}}
            <button class="btn btn-danger note-button disabled">Article Saved</button>
          {{else}}
            <button class="btn btn-success btn-save" data-id="{{this._id}}">Save Article</button>
          {{/if}}  
        </div>
      </div>
    </div>
  {{/each}}
</div>


 

