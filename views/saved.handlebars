<div class="container">
    <div class="row mt-3">
        <div class="card col-sm-8">
            {{#each article}}
            <h3 class="card-header">{{this.title}}</h3>
            <div class="row">
                <div class="col-sm-8 card-block">
                    <p class="card-text">{{this.summary}}</p>
                    <a href="{{this.link}}" target="_blank" class="card-link">Read more</a>
                </div>
                <div class="col-sm-12 align-self-end text-right">
                    <button class="btn btn-danger m-2 btn-remove" data-id="{{this._id}}">Remove</button>
                    <button class="btn btn-success m-2 btn-view-notes" data-id="{{this._id}}">View Notes</button>
                </div>
            </div>
            {{/each}}
        </div>
        <div id="comments" class="card col-sm-4">
            <h3 class="card-header text-center">Notes</h3>
            <div class="card-text">
                {{#each comments}}
                <li>
                    <p><em>{{data.title}}</em></p>
                    <p>{{data.body}}</p>
                </li>
                {{/each}}
            </div>
        </div>
    </div>
</div>